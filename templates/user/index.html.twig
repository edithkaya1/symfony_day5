{% extends 'base.html.twig' %} {% block title %}Welcome{% endblock %}
{% block body %}
<div class="container-fluid bg-image">
    <h1>Training programme for every need!</h1>
    <h2 class="text-center my-2"><i class="fa-solid fa-dog"></i> Fun and joy in learning is my basic principle <i class="fa-solid fa-dog"></i></h2>
  <div class="row row-cols-xl-3 row-cols-lg-3 row-cols-md-2 row-cols-1">
    {% for course in courses %}
    <div>
      <div class="card my-3 mx-auto w-75">
        <div class="card-header fw-bold text-center">{{ course.name }}</div>
        <img
          src="{{ asset('pictures/' ~ course.picture) }}"
          class="card-img-top card-img"
          alt="{{ course.picture }}"
        />
        <div class="card-body">
          <h5 class="card-title text-center fs-5">Type: {{ course.type }}</h5>
          <h5 class="card-title text-center fs-5">
            Price: {{ course.price }}â‚¬
          </h5>
          <p class="card-title text-center">
            Number of units: {{ course.noUnits }}
          </p>
        </div>
        
        {# <div class="card-footer text-center p-3 text-body-secondary">
          <a
            href="{{ path('app_courses_show', { id: course.id }) }}"
            class="btn btn-secondary m-2"
            >Details</a
          >
          <a
            href="{{ path('app_courses_edit', { id: course.id }) }}"
            class="btn btn-dark m-2"
            >Edit</a
          >
          <form
            action="{{ path('app_courses_delete', { id: course.id }) }}"
            method="POST"
          >
            <button class="btn btn-danger">Delete</button>
          </form>
        </div> #}
       
      </div>
    </div>
    {% else %}
    <div class="container-fluid">
      <p class="text-center fs-5">no records found</p>
    </div>
    {% endfor %}
  </div>
</div>
{% endblock %}

